<UserControl x:Class="MakulaTest.MacularDiagnosisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MakulaTest"
             mc:Ignorable="d" x:Name="MyUserControl" 
             d:DesignHeight="700" d:DesignWidth="700">
    <Grid>
    <Canvas Visibility="Visible" Background="White"  Margin="20" x:Name="MyCanvas" SizeChanged="MyCanvas_SizeChanged"  MouseDown="MyCanvas_MouseDown">
            <Rectangle x:Name="MyRectangle" Margin="50" Stroke="Black" Fill="White" Width="{Binding ElementName=MyUserControl, Path=MinSize}" Height="{Binding ElementName=MyUserControl, Path=MinSize}"></Rectangle>
        </Canvas>
    </Grid>
</UserControl>
