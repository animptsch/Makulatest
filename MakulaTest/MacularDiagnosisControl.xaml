<UserControl x:Class="MakulaTest.MacularDiagnosisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MakulaTest"
             mc:Ignorable="d" x:Name="MyUserControl" 
             d:DesignHeight="700" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Canvas Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Height="300" Width="300" x:Name="MyCanvas"  MouseDown="MyCanvas_MouseDown" PreviewMouseWheel="MyCanvas_PreviewMouseWheel">
            <Rectangle x:Name="MyRectangle" Stroke="Black" Fill="White" Width="200" Height="200"  Margin="50" />
        </Canvas>

        <TextBlock Margin="50" FontSize="30" Grid.Column="1" Text="0" x:Name="txtDelta"/>
    </Grid>
</UserControl>
