<UserControl x:Class="MakulaTest.MacularDiagnosisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MakulaTest"
             mc:Ignorable="d" x:Name="MyUserControl" 
             d:DesignHeight="700" d:DesignWidth="700">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="250"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="FontSize" Value="10"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas Grid.RowSpan="2" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Height="300" Width="300" x:Name="MyCanvas"  MouseDown="MyCanvas_MouseDown" PreviewMouseWheel="MyCanvas_PreviewMouseWheel">
            <Rectangle x:Name="MyRectangle" Stroke="Black" Fill="White" Width="200" Height="200"  Margin="50" />
        </Canvas>

        <TextBox x:Name="txtPointList" Grid.Column="1" />
        <TextBox x:Name="txtLastPos" Grid.Column="1" Grid.Row="1" />

    </Grid>
</UserControl>
