<UserControl x:Class="MakulaTest.AnalyseControl"
              x:Name="MyWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MakulaTest"
             mc:Ignorable="d"
       d:DesignHeight="700" d:DesignWidth="700"
                                   SizeChanged="MyCanvas_SizeChanged" >

  <DockPanel>

    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="50">

      <Button x:Name="BtnBack"
      Background="Transparent"
      BorderBrush="Transparent"
      ToolTip="Zurück zur Hauptseite" 
      Click="BtnBack_Click"
      HorizontalAlignment="Left"
              Width="70"
                DockPanel.Dock="Bottom">

      <Button.Style>
        <Style TargetType="{x:Type Button}">
          <Setter Property="Background" Value="Transparent"/>
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate TargetType="{x:Type Button}">
                <Border Background="{TemplateBinding Background}">
                  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
          <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="Black"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </Button.Style>

      <Image Source="Images/back.png" />
    </Button>

    <Button x:Name="BtnGrid"
      Background="Transparent"
      BorderBrush="Transparent"
      ToolTip="Raster an/aus" 
      Click="BtnGrid_Click"
      HorizontalAlignment="Right"
      Width="70"
              DockPanel.Dock="Bottom">


      <Button.Style>
        <Style TargetType="{x:Type Button}">
          <Setter Property="Background" Value="Transparent"/>
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate TargetType="{x:Type Button}">
                <Border Background="{TemplateBinding Background}">
                  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
          <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="Black"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </Button.Style>

      <Image Source="Images/grid.png" />
    </Button>
    </StackPanel>

    <Canvas Visibility="Visible" 
          
            Height="650"
                    x:Name="MyCanvas">

    </Canvas>

  
  </DockPanel>



</UserControl>
