<Window x:Class="MakulaTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakulaTest"
        mc:Ignorable="d" Loaded="Window_Loaded" KeyDown="Window_KeyDown"
        Title="MainWindow" Height="700" Width="700" Background="LightGray" MinWidth="550" MinHeight="250">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <local:MacularDiagnosisControl x:Name="DiagnoseControl" />
        <local:AnalyseControl x:Name="MyAnalyse" Visibility="Collapsed" />
        
        <StackPanel x:Name="MainWindowToolbar" Orientation="Horizontal" Grid.Row="1" >
            <Button x:Name="btnAnalyse" Content="Analyse" Margin="10" FontSize="20" Padding="5" Click="BtnAnalyse_Click" />
            <Button x:Name="btnDiagnose" Content="Diagnose" Click="BtnDiagnose_Click" FontSize="20" Padding="5" Margin="10" />
            <Button x:Name="btnSettingSize" Content="Größe speichern" Margin="10" FontSize="20" Padding="10" Click="BtnSettingSize_Click"/>
            <Button x:Name="btnStartMacularDiagnosis" Content="Start" Margin="10" FontSize="20" Padding="5" Click="BtnStartMacularDiagnosis_Click"/>
            <Button x:Name="btnSettings" Content="Einstellungen" Margin="10" FontSize="20" Padding="5" Click="BtnSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>
