<Window x:Class="MakulaTest.MakulaNorm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakulaTest"
        mc:Ignorable="d"
        Title="MakulaNorm" Height="25cm" Width="25cm" >
    <Grid>
        <Canvas x:Name="MyCanvas" Width="13cm" MouseLeave="MyCanvas_MouseLeave" Background="LightGray" Height="13cm" Cursor="None" MouseMove="Canvas_MouseMove">
            <Ellipse x:Name="MyEllipse" Width="6" Height="6" Stroke="Red" Fill="Red" Visibility="Collapsed" >
                <Ellipse.Effect>
                    <DropShadowEffect Color="#FF9999" ShadowDepth="0" Direction="0" BlurRadius="25"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>
        
    </Grid>
</Window>
